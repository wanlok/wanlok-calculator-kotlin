<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="viewModel" type="com.wanlok.calculator.CalculationViewModel"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/calculationRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentTop="true"
            android:layout_above="@id/calculatorButtonLinearLayout"
            android:background="@color/blue" />

        <LinearLayout
            android:id="@+id/calculatorButtonLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal">

                <com.wanlok.calculator.customView.CalculatorButton
                    android:id="@+id/clearButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25"
                    app:text="C" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent" />

                <com.wanlok.calculator.customView.CalculatorButton
                    android:id="@+id/backspaceButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25"
                    app:text="←" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent" />

                <com.wanlok.calculator.customView.CalculatorButton
                    android:id="@+id/divideButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25"
                    app:text="÷" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal">

                <com.wanlok.calculator.customView.CalculatorButton
                    android:id="@+id/sevenButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25"
                    app:text="7" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent" />

                <com.wanlok.calculator.customView.CalculatorButton
                    android:id="@+id/eightButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25"
                    app:text="8" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent" />

                <com.wanlok.calculator.customView.CalculatorButton
                    android:id="@+id/nineButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25"
                    app:text="9" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent" />

                <com.wanlok.calculator.customView.CalculatorButton
                    android:id="@+id/multiplyButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25"
                    app:text="×" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal">

                <com.wanlok.calculator.customView.CalculatorButton
                    android:id="@+id/fourButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25"
                    app:text="4" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent" />

                <com.wanlok.calculator.customView.CalculatorButton
                    android:id="@+id/fiveButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25"
                    app:text="5" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent" />

                <com.wanlok.calculator.customView.CalculatorButton
                    android:id="@+id/sixButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25"
                    app:text="6" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent" />

                <com.wanlok.calculator.customView.CalculatorButton
                    android:id="@+id/minusButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25"
                    app:text="−" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal">

                <com.wanlok.calculator.customView.CalculatorButton
                    android:id="@+id/oneButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25"
                    app:text="1" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent" />

                <com.wanlok.calculator.customView.CalculatorButton
                    android:id="@+id/twoButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25"
                    app:text="2" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent" />

                <com.wanlok.calculator.customView.CalculatorButton
                    android:id="@+id/threeButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25"
                    app:text="3" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent" />

                <com.wanlok.calculator.customView.CalculatorButton
                    android:id="@+id/addButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25"
                    app:text="+" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent" />

                <com.wanlok.calculator.customView.CalculatorButton
                    android:id="@+id/zeroButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25"
                    app:text="0" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent" />

                <com.wanlok.calculator.customView.CalculatorButton
                    android:id="@+id/decimalButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25"
                    app:text="." />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent" />

                <com.wanlok.calculator.customView.CalculatorButton
                    android:id="@+id/equalButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25"
                    app:text="=" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>
